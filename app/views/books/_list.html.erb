
<div>
   <h1>User info</h1> 
 <%= image_tag user.get_profile_image(100,100) %>
   <h3><%= user.name %></h3>
    <h3><%= user.introduction %></h3>
    <%= link_to "ぼたん", edit_user_path(user.id) %>
    
    
  <h2>NewBook</h2>
<% if book.errors.any? %>
  <%= book.errors.count %> errors occurred. 
  <ul>
  <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  
  
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <br>
  <%= f.submit 'Create Book' %>
<% end %>
 </div>